<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingVertical="5dp">
        <ImageView
            android:id="@+id/iv_headlines_thumbnail"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/corner_5dp"
            android:clipToOutline="true"
            android:src="@drawable/image_not_available"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/tv_headlines_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/cv_allnews_ic_source"
                android:paddingTop="5dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:text="The Verge â€¢ 12 Jan 2023"/>
            <TextView
                android:id="@+id/tv_headlines_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/dark_gray"
                android:textSize="15sp"
                android:text="Secret Invasion brings the MCU down to Earth with a good..."/>

            <TextView
                android:id="@+id/tv_headlines_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>