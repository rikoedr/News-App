<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/main_layout"
    tools:context=".MainActivity">

    <!-- TODO: TITLE BAR -->
    <RelativeLayout
        style="@style/title_layout">
        <ImageView
            android:id="@+id/title_iv"
            style="@style/iv_title" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/title1_tv"
                style="@style/tv_title"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="MANDIRI"/>
            <TextView
                android:id="@+id/title2_tv"
                style="@style/tv_title"
                android:layout_toEndOf="@id/title1_tv"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:text="  NEWS"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- TODO: TOP NAVIGATION BAR -->
    <RadioGroup
        android:id="@+id/rg_top_navigation"
        style="@style/rg_top_navigation">
        <RadioButton
            android:id="@+id/rb_navigation_home"
            style="@style/rb_navigation_menu"
            android:checked="true"
            android:drawableStart="@drawable/navigation_selector_ic_home"
            android:text="HOME" />
        <View style="@style/view_navigation_divider" />
        <RadioButton
            android:id="@+id/rb_navigation_explore"
            style="@style/rb_navigation_menu"
            android:drawableStart="@drawable/navigation_selector_ic_explore"
            android:text="EXPLORE"/>
        <View style="@style/view_navigation_divider" />
        <RadioButton
            android:id="@+id/rb_navigation_saved"
            style="@style/rb_navigation_menu"
            android:drawableStart="@drawable/navigation_selector_ic_saved"
            android:text="SAVED"/>
    </RadioGroup>

    <!-- TODO: TOP NAVIGATION BAR -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_content"
        style="@style/vp_content"/>





</LinearLayout>