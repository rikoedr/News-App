<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TODO: MAIN ACTIVITY STYLE SET -->
    <!-- TODO: Main Activity Layout -->
    <style name="main_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- TODO: Title Bar -->
    <style name="title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="iv_title">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:src">@drawable/title_image_logo</item>
    </style>
    <style name="tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="bt_settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawable">@drawable/baseline_more_horiz_24</item>
    </style>

    <!-- TODO: Top Navigation Bar -->
    <style name="rg_top_navigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>
    <style name="rb_navigation_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/navigation_selector_bg_button</item>
        <item name="fontFamily">@font/nunito_sans_extrabold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/navigation_selector_text</item>
    </style>
    <style name="view_navigation_divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- TODO: ViewPager for Content -->
    <style name="vp_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!-- TODO: HOME FRAGMENT STYLE SET -->
    <!-- TODO: Home Fragment Linear Layout -->
    <style name="ll_home_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- TODO: Headlines News -->
    <style name="rv_top_headlines">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- TODO: All News -->
    <style name="tv_all_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">15sp</item>
        <item name="android:paddingVertical">10sp</item>
        <item name="android:fontFamily">@font/nunito_sans_extrabold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="rv_headlines">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>

    <!-- TODO: EXPLORE FRAGMENT STYLE SET -->
    <!-- TODO: Explore Fragment Layout -->
    <style name="fl_explore_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="ll_explore_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- TODO: Explore News -->
    <style name="rv_explore_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>

    <!-- TODO: Explore Loading Screen -->
    <style name="ll_explore_loading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>
    <style name="v_explore_loading_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="marginHorizontal">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/corner_5dp</item>
        <item name="android:backgroundTint">@color/soft_gray</item>
    </style>

    <!-- TODO: Explore Bar -->
    <style name="hsv_explore_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:background">@drawable/corner_10dp</item>
        <item name="android:tint">@color/soft_blue</item>
    </style>
    <style name="rg_explore_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="rb_explore_topics">
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="fontFamily">@font/nunito_sans_extrabold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@drawable/explore_bar_selector_text</item>
    </style>
    
    


    <!-- TODO: SAVED FRAGMENT FRAGMENT STYLE SET -->
    <!-- TODO: Saved Fragment Layout -->
    <style name="rv_saved_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>
















</resources>