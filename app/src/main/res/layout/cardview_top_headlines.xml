<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="10dp"
    android:elevation="0dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="7dp">
        <ImageView
            android:id="@+id/iv_top_headlines_thumbnail"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:background="@drawable/corner_10dp"
            android:clipToOutline="true"
            android:src="@drawable/image_not_available"/>
        <TextView
            android:id="@+id/tv_top_headlines_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:textColor="@color/soft_white"
            android:textSize="16sp"
            android:text="Secret Invasion brings the MCU down to Earth with a good..."
            android:singleLine="false"/>
        <TextView
            android:id="@+id/tv_top_headlines_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:drawableStart="@drawable/cv_headlines_ic_news"
            android:drawablePadding="5dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:textColor="@color/soft_gray"
            android:textSize="12sp"
            android:text="The Verge â€¢ 12 Jan 2023"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>