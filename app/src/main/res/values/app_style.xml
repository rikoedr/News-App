<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TODO: MAIN ACTIVITY STYLE -->
    <style name="main_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- TODO: TITLE BAR STYLE -->
    <style name="title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingBottom">5dp</item>

    </style>

    <style name="title_iv">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="title_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- TODO: TOP NAVIGATION BAR (RADIOGROUP) -->
    <style name="rg_top_navigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>
    <style name="rb_navigation_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/navigation_selector_bg_button</item>
        <item name="fontFamily">@font/nunito_sans_extrabold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/navigation_selector_text</item>
    </style>
    <style name="view_navigation_divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_weight">1</item>
    </style>




    <!-- TODO: CONTENT VIEWPAGER STYLE -->
    <style name="content_vp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- TODO: MENU STYLE -->
    <style name="menu_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="menu_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="menu_divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>